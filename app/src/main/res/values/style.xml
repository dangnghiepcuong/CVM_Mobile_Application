<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="btn_primary" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginVertical">15dp</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
    </style>

    <style name="labelFor_et" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="edit_text" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/bg_edit_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_feature" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
    </style>

    <style name="labelFor_btn_feature">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="marginHorizontal">5dp</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btn_primary_300dp">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/bg_btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>